{
  "name": "@10up/toolkit",
  "private": true,
  "author": {
    "name": "10up",
    "email": "info@10up.com",
    "url": "https://10up.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/10up/10up-scripts.git"
  },
  "scripts": {
    "prepare": "lerna bootstrap --hoist",
    "reinstall": "lerna clean --yes && npm run prepare",
    "test": "lerna run test --stream",
    "clean": "lerna clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "bundleDependencies": false,
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "description": "Collection of reusable scripts for 10up development.",
  "engines": {
    "node": ">=10",
    "npm": ">=6.9"
  }
}
